<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/androidRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:background="#f4f4f4">

    <ImageView
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageview_rounded_image"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/aboutTitle"
        android:layout_below="@id/imageview_rounded_image"
        android:text="ផលិតដោយ : ក្រសួងរ៉ែ⁣នឹងថាមពល"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/aboutTitle"
        android:text="@string/description_about"
        android:id="@+id/aboutTitle1"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/aboutTitle1"
        android:text="@string/description_about"
        android:id="@+id/aboutTitle2"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@id/aboutTitle2"
        android:text="@string/description_about"
        android:id="@+id/aboutTitle3"
        android:layout_height="wrap_content" />
</RelativeLayout>